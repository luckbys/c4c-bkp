rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir leitura e escrita para todos os arquivos de imagem
    match /images/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Permitir leitura e escrita para usuários autenticados em outras pastas
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir acesso público para avatares e mídia do WhatsApp
    match /avatars/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /media/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Permitir acesso para arquivos temporários
    match /temp/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Permitir acesso para todos os tipos de mídia
    match /audios/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /videos/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /documents/{allPaths=**} {
      allow read, write: if true;
    }
    
    match /stickers/{allPaths=**} {
      allow read, write: if true;
    }
  }
}